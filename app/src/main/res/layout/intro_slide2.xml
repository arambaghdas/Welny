<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/top_banner_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header1"
            android:layout_below="@+id/iv_banner"
            android:textSize="18sp"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/intro5_header1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_header2"
            android:layout_marginTop="19dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/tv_header1">

            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/cycle_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_header2"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/intro2_header2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_header3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/ly_header2">

            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cycle_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_header3"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/intro2_header3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_header4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/ly_header3">

            <ImageView
                android:id="@+id/iv_dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cycle_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_header4"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/intro2_header4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_header5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/ly_header4">

            <ImageView
                android:id="@+id/iv_dot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cycle_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_header5"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/intro2_header5" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header6"
            android:textSize="14sp"
            android:textColor="@color/colorDarkGray"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:layout_below="@+id/ly_header5"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="24dp"
            android:text="@string/intro2_header6"/>

    </RelativeLayout>
</ScrollView>