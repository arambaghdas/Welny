<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <include layout="@layout/top_view"
            android:id="@+id/fy_top_view"/>

        <TextView
            android:id="@+id/tv_registration_info_header"
            android:layout_below="@+id/fy_top_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextColorDescr"
            android:text="@string/registration_info_header"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="6sp"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_name_view"
            android:layout_marginTop="32dp"
            android:layout_below="@id/tv_registration_info_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_round_corner_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toLeftOf="@+id/iv_icon_person"
                        android:textColor="@color/colorTextColorHeader"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toStartOf="@+id/iv_icon_person" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_icon_person"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:tint="@color/colorIconGray"
                        android:src="@drawable/ic_person_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColorHeader"
                android:text="@string/name"
                android:background="@android:color/white"
                android:layout_marginStart="27dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="27dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_sr_name_view"
            android:layout_marginTop="23dp"
            android:layout_below="@id/fl_name_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_round_corner_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/ed_sr_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toLeftOf="@+id/iv_icon_person1"
                        android:textColor="@color/colorTextColorHeader"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toStartOf="@+id/iv_icon_person1" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_icon_person1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:tint="@color/colorIconGray"
                        android:src="@drawable/ic_person_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sr_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColorHeader"
                android:text="@string/sr_name"
                android:background="@android:color/white"
                android:layout_marginStart="27dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="27dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_email_view"
            android:layout_marginTop="23dp"
            android:layout_below="@id/fl_sr_name_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_round_corner_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toLeftOf="@+id/iv_icon_person2"
                        android:textColor="@color/colorTextColorHeader"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toStartOf="@+id/iv_icon_person2" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_icon_person2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:tint="@color/colorIconGray"
                        android:src="@drawable/ic_email_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_email_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColorHeader"
                android:text="@string/email"
                android:background="@android:color/white"
                android:layout_marginStart="27dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="27dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_registration_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_email_view"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="6sp"
            android:visibility="gone"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/registration_complete"
            android:id="@+id/tv_registration_complete"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/tv_registration_error"
            android:background="@drawable/bg_disable_round_corner"
            android:gravity="center"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="46dp"
            android:id="@+id/pb_loading"
            android:theme="@style/progressBarWhite"
            android:layout_below="@+id/tv_registration_error"
            android:visibility="gone"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_registration_info_descr"
            android:layout_below="@+id/tv_registration_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextColorDescr"
            android:text="@string/registration_info"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="6sp"
            android:textSize="14sp"/>

    </RelativeLayout>
</ScrollView>
