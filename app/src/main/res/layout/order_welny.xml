<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_banner">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/try_welny" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header1"
            android:textSize="16sp"
            android:textColor="@color/colorDarkGray"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:layout_below="@+id/rl_banner"
            android:layout_marginTop="24dp"
            android:text="@string/order_welny_header1"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_header1"
            android:src="@drawable/ic_logo_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ry_header2"
            android:layout_marginTop="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/iv_logo">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icons_blank_24" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_header2"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/order_welny_header2" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="end"
                android:id="@+id/tv_header3"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorEnableColor"
                tools:text="Welny+ Платинум" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ry_header3"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/ry_header2">

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mdi_event" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_header4"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/order_welny_header3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="end"
                android:id="@+id/tv_header5"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorEnableColor"
                tools:text="30-10-2019"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ry_header4"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/ry_header3">

            <ImageView
                android:id="@+id/iv_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mdi_event" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_header6"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/order_welny_header4" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="end"
                android:id="@+id/tv_header7"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorEnableColor"
                tools:text="08-01-2022" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ry_header5"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/ry_header4">

            <ImageView
                android:id="@+id/iv_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mdi_access_time" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_header8"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/order_welny_header5" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="end"
                android:id="@+id/tv_header9"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorEnableColor"
                tools:text="10" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/order"
            android:id="@+id/tv_order"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_enable_round_corner"
            android:gravity="center"/>

    </RelativeLayout>
</ScrollView>